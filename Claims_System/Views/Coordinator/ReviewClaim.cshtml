@model Claims_System.Models.LecturerClaim
@{
    ViewData["Title"] = "Review Claim";
    ViewData["ControllerName"] = "Coordinator";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Claim Details</h2>
        <a class="btn btn-link" href="/Coordinator">← Back to Dashboard</a>
    </div>

    <div class="row g-4">
        <!-- Left: Claim Info -->
        <div class="col-lg-8">
            <!-- Lecturer Info -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light"><h5 class="mb-0">Lecturer Information</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Model.EmployeeNumber</dd>

                        <dt class="col-sm-4">Lecturer</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.ModuleName</dd>

                        <dt class="col-sm-4">Month</dt>
                        <dd class="col-sm-8">@Model.Month</dd>

                        <dt class="col-sm-4">Submitted</dt>
                        <dd class="col-sm-8">@Model.Submitted</dd>
                    </dl>
                </div>
            </div>

       

            <!-- Claim Summary -->
            <div class="card shadow-sm border-0 rounded-3 mt-4">
                <div class="card-header bg-light"><h5 class="mb-0">Claim Summary</h5></div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead><tr><th>Hours Worked</th><th>Rate</th><th>Total</th></tr></thead>
                        <tbody>
                            <tr>
                                <td>@Model.HoursWorked</td>
                                <td>R @Model.Rate</td>
                                <td class="fw-bold">R @Model.Total.ToString("N2")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Supporting Documents -->
            <div class="card shadow-sm border-0 rounded-3 mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Supporting Documents</h5>
                </div>

                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Document1FileName))
                    {
                        <div class="mb-3">
                            <h6>@Model.Document1FileName</h6>
                            <div class="d-flex gap-2">
                                <!-- Preview Button -->
                                <button class="btn btn-outline-primary btn-sm"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#previewDoc1"
                                        aria-expanded="false"
                                        aria-controls="previewDoc1">
                                    Preview
                                </button>

                                <!-- Download Button -->
                                <a class="btn btn-outline-success btn-sm"
                                   asp-controller="@ViewData["ControllerName"]"
                                   asp-action="DownloadDocument1"
                                   asp-route-claimId="@Model.ClaimId">
                                    Download
                                </a>
                            </div>

                            <!-- Collapsible Preview -->
                            <div class="collapse mt-3" id="previewDoc1">
                                <iframe src="@Url.Action("PreviewDocument", ViewData["ControllerName"].ToString(),
                                                                new { claimId = Model.ClaimId, docNumber = 1 })"
                                    width="100%" height="500px" class="border rounded"></iframe>
                        </div>
                    </div>
                                        }

                    @if (!string.IsNullOrEmpty(Model.Document2FileName))
                    {
                        <div class="mb-3">
                            <h6>@Model.Document2FileName</h6>
                            <div class="d-flex gap-2">
                                <!-- Preview Button -->
                                <button class="btn btn-outline-primary btn-sm"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#previewDoc2"
                                        aria-expanded="false"
                                        aria-controls="previewDoc2">
                                    Preview
                                </button>

                                <!-- Download Button -->
                                <a class="btn btn-outline-success btn-sm"
                                   asp-controller="@ViewData["ControllerName"]"
                                   asp-action="DownloadDocument2"
                                   asp-route-claimId="@Model.ClaimId">
                                    Download
                                </a>
                            </div>

                            <!-- Collapsible Preview -->
                            <div class="collapse mt-3" id="previewDoc2">
                                <iframe src="@Url.Action("PreviewDocument", ViewData["ControllerName"].ToString(),
                                                                new { claimId = Model.ClaimId, docNumber = 2 })"
                                    width="100%" height="500px" class="border rounded"></iframe>
                        </div>
                    </div>
                                        }

                    @if (string.IsNullOrEmpty(Model.Document1FileName) && string.IsNullOrEmpty(Model.Document2FileName))
                    {
                        <p class="text-muted">No supporting documents uploaded.</p>
                    }
                </div>
            </div>
            </div>


        <!-- Right: Status & Actions -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light"><h5 class="mb-0">Claim Status</h5></div>
                <div class="card-body">
                    <p><strong>Coordinator Status:</strong> @Model.CoordinatorStatus</p>
                    <p><strong>Total Amount:</strong> R @Model.Total.ToString("N2")</p>

                    <div class="mt-3">
                        <button class="btn btn-success mb-2"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmModal"
                                data-action="ApproveClaim"
                                data-employee="@Model.EmployeeNumber">
                            Verify
                        </button>
                        <button class="btn btn-danger mb-2"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmModal"
                                data-action="RejectClaim"
                                data-employee="@Model.EmployeeNumber">
                            Reject
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="confirmForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to <span id="modalActionName"></span> this claim?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes, proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
                const confirmModal = document.getElementById('confirmModal');
        confirmModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const action = button.getAttribute('data-action');
            const claimId = "@Model.ClaimId"; 

            document.getElementById('modalActionName').textContent =
                action.charAt(0).toUpperCase() + action.slice(1);

            const form = document.getElementById('confirmForm');
            const controller = "@ViewData["ControllerName"]";
                   const method = action; // directly use the method name
        form.action = '/' + controller + '/' + method + '?claimId=' + claimId;

        });

    </script>
}
