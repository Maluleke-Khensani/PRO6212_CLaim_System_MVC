@model IEnumerable<Claims_System.Models.LecturerClaim>

@{
    ViewData["Title"] = "Academic Manager Dashboard";
}


    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            @await Html.PartialAsync("Partials/_Logo")
        </div>
        <h2 class="h4">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger ms-3">
                Logout
            </a>
        </div>
    </div>



    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs" id="claimTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">Approved</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">Rejected</button>
        </li>
    </ul>

    <div class="tab-content mt-3" id="claimTabsContent">
        <!-- Pending Claims -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
            <h5 class="mb-3">Pending Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Employee ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Department</th>
                        <th>Coordinator Status</th>
                        <th>Manager Status</th>
                        <th>Submitted On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.ManagerStatus == "Pending"))
                    {
                        <tr>
                            <td>@claim.EmployeeNumber</td>
                            <td>@claim.FullName</td>
                            <td>@claim.Month</td>
                            <td>@claim.ModuleName</td>
                            <td>@claim.CoordinatorStatus</td>
                            <td>
                                <span class="badge bg-warning text-dark">Pending</span>
                            </td>
                            <td>@claim.Submitted</td>
                            <td>
                                <a asp-controller="Manager"
                                   asp-action="ReviewClaim"
                                   asp-route-claimId="@claim.ClaimId" 
                                   class="btn-btn-primary">
                                    Review
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Approved Claims -->
        <div class="tab-pane fade" id="approved" role="tabpanel">
            <h5 class="mb-3">Approved Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Employee ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Department</th>
                        <th>Coordinator Status</th>
                        <th>Manager Status</th>
                        <th>Submitted On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.ManagerStatus == "Approved"))
                    {
                        <tr>
                            <td>@claim.EmployeeNumber</td>
                            <td>@claim.FullName</td>
                            <td>@claim.Month</td>
                            <td>@claim.ModuleName</td>
                            <td>@claim.CoordinatorStatus</td>
                            <td><span class="badge bg-success">Approved</span></td>
                            <td>@claim.Submitted</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Rejected Claims -->
        <div class="tab-pane fade" id="rejected" role="tabpanel">
            <h5 class="mb-3">Rejected Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Employee ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Department</th>
                        <th>Coordinator Status</th>
                        <th>Manager Status</th>
                        <th>Submitted On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.ManagerStatus == "Rejected"))
                    {
                        <tr>
                            <td>@claim.EmployeeNumber</td>
                            <td>@claim.FullName</td>
                            <td>@claim.Month</td>
                            <td>@claim.ModuleName</td>
                            <td>@claim.CoordinatorStatus</td>
                            <td><span class="badge bg-danger">Rejected</span></td>
                            <td>@claim.Submitted</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
