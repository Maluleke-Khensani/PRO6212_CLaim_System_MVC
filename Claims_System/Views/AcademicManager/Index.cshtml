@model IEnumerable<Claims_System.Models.Lecturers.Lecturer>

@{
    ViewData["Title"] = "Academic Manager Dashboard";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        @await Html.PartialAsync("Partials/_Logo")
        </br >
        <h2 class="h4">@ViewData["Title"]</h2>
</div>

    <p class="text-muted"> This is a visual prototype. Buttons do not create or save data yet</p>


    <!-- Tabs Navigation  assisted by ChatGPT-->
    <ul class="nav nav-tabs" id="claimTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">Approved</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">Rejected</button>
        </li>
    </ul>
    <div class="tab-content mt-3" id="claimTabsContent">
        <!-- Pending Claims -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
            <h5 class="mb-3">Pending Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
    
            <tr>
                <th>Employee ID</th>
                <th>Lecturer</th>
                 <th>Month</th>
                <th>Department</th>
                <th>Coordinator Status</th>
                <th>Submiited On</th>
                <th>Action</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var claim in Model.Where(c => c.ManagerStatus == "Pending"))
            {
            <tr>
                <td>@claim.EmployeeNumber</td>
                <td>@claim.FullName</td>
                    <td>@claim.Month</td>
                    <td>@claim.Department</td>

                    <!-- Manager Status -->
                    <td>
                        @if (claim.CoordinatorStatus == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (claim.CoordinatorStatus == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (claim.CoordinatorStatus == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>@claim.Submitted</td>
                    <td>
                        <a asp-controller="AcademicManager"
                           asp-action="ReviewClaim"
                           asp-route-employeeNumber="@claim.EmployeeNumber" 
                           class="btn btn-primary">Review
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <!-- Approved Claims-->
        <div class="tab-pane fade" id="approved" role="tabpanel">
            <h5 class="mb-3">Approved Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Employee ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Department</th>
                        <th>Coordinator Status</th>
                        <th>Submitted On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.ManagerStatus == "Approved"))
                    {
                        <tr>
                            <td>@claim.EmployeeNumber</td>
                            <td>@claim.FullName</td>
                            <td>@claim.Month</td>
                            <td>@claim.Department</td>
                            <!-- Manager Status -->
                            <td>
                                @if (claim.CoordinatorStatus == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (claim.CoordinatorStatus == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (claim.CoordinatorStatus == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                            </td>
                            <td>@claim.Submitted</td>
                            <td>
                              No Action can be made
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Rejected Claims-->

        <div class="tab-pane fade" id="rejected" role="tabpanel">
            <h5 class="mb-3">Rejected Claims</h5>
            <table class="table table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Employee ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Department</th>
                        <th>Coordinator Status</th>
                        <th>Submitted On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.CoordinatorStatus == "Rejected"))
                    {
                        <tr>
                            <td>@claim.EmployeeNumber</td>
                            <td>@claim.FullName</td>
                            <td>@claim.Month</td>
                            <td>@claim.Department</td>
                            <td>@claim.CoordinatorStatus</td>
                            <td>@claim.Submitted</td>
                            <td>No Action can be made</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    