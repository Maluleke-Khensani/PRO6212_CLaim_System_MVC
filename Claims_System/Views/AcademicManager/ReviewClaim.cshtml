@model Claims_System.Models.Lecturers.Lecturer

@{
    ViewData["Title"] = "Review Claim";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0">Claim Details</h2>
        <a class="btn btn-link" href="/Lecturer">← Back to Dashboard</a>
    </div>

    <!-- Claim Overview -->
    <div class="row g-4">
        <!-- Left: Claim Info -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Lecturer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Model.EmployeeNumber</dd>

                        <dt class="col-sm-4">Lecturer</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department</dd>

                        <dt class="col-sm-4">Month</dt>
                        <dd class="col-sm-8">@Model.Month</dd>

                        <dt class="col-sm-4">Submitted</dt>
                        <dd class="col-sm-8">@Model.Submitted</dd>
                    </dl>
                </div>
            </div>
            <!-- Claim Lines -->
           
            <div class="card shadow-sm border-0 rounded-3 mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Claim Summary</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Hours Worked</th>
                                <th>Rate</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.hoursWorked</td>
                                <td>R @Model.Rate</td>
                                <td class="fw-bold">R @Model.CalculateAmount().ToString("N2")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


            <!-- Supporting Documents -->
            <div class="card shadow-sm border-0 rounded-3 mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Supporting Documents</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Timesheet.pdf (placeholder)</li>
                        <li class="list-group-item">ModuleReport.docx (placeholder)</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Claim Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Coordinator Status:</strong> @Model.CoordinatorStatus</p>
                    <p><strong>Total Amount:</strong> R @Model.CalculateAmount().ToString("N2")</p>
    

         <div class="mt-3">
        <button class="btn btn-success" disabled>Approve</button>
        <button class="btn btn-danger" disabled>Reject</button>
    </div>
</div>
                </div>
            </div>
        </div>
    </div>`
