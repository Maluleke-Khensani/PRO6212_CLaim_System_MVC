@{
    ViewData["Title"] = "Create Monthly Claim";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h5 mb-0">Create Monthly Claim</h1>
    <a class="btn btn-link" href="/Lecturer">Back to dashboard</a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form>
            <div class="row g-3">
                <div class="col-sm-4">
                    <label class="form-label">Month</label>
                    <select class="form-select" disabled>
                        <option>August</option>
                        <option>July</option>
                        <option>June</option>
                    </select>
                    <div class="form-text">Selecting is disabled in prototype.</div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">Year</label>
                    <input class="form-control" value="2025" disabled />
                </div>
                <div class="col-sm-4">
                    <label class="form-label">Total (calculated)</label>
                    <input class="form-control" value="R 8,400.00" disabled />
                </div>
            </div>
            <hr />

            <h6>Claim lines</h6>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Module</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Line total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    </table>


            <div class="mb-3">
                <label class="form-label">Supporting documents</label>
                <div class="border rounded p-3 bg-white">
                    <p class="mb-1 text-muted">Files are represented visually only in this prototype.</p>
                    <ul>
                        <li>timesheet_aug2025.pdf</li>
                        <li>attendance_aug2025.xlsx</li>
                    </ul>
                    <button class="btn btn-sm btn-outline-secondary" disabled>Attach files (disabled)</button>
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary" disabled>Submit claim (disabled in prototype)</button>
                <a class="btn btn-secondary ms-2" href="/Lecturer">Cancel</a>
            </div>
        </form>
    </div>
</div>
