@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">

    <!-- Logo + Title -->
    <div class="text-center mb-4">
         <h1 class="display-5 fw-bold">Claims Management System</h1>
        <p class="text-muted">Easily manage, verify, and approve lecturer claims.</p>
    </div>

    <!-- Navigation Cards -->
    <div class="row justify-content-center">
        <!-- Lecturer -->
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <div class="card-body">
                    <h5 class="card-title">Lecturer</h5>
                    <p class="card-text text-muted">Submit and track your claims.</p>
                    <a asp-controller="Lecturer" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>

        <!-- Coordinator -->
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <div class="card-body">
                    <h5 class="card-title">Coordinator</h5>
                    <p class="card-text text-muted">Review and verify submitted claims.</p>
                    <a asp-controller="Coordinator" asp-action="Index" class="btn btn-success">Go</a>
                </div>
            </div>
        </div>

        <!-- Manager -->
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <div class="card-body">
                    <h5 class="card-title">Manager</h5>
                    <p class="card-text text-muted">Approve or reject verified claims.</p>
                    <a asp-controller="AcademicManager" asp-action="Index" class="btn btn-danger">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>
