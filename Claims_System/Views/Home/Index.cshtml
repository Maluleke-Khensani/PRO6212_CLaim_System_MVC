@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    @await Html.PartialAsync("Partials/_Logo")
</div>

<!-- Hero Section -->
<div class="container text-center py-5 bg-light rounded-4 shadow-sm">
    <h1 class="display-4 fw-bold mb-3 text-dark">Claims Management System</h1>
    <p class="lead mb-4 text-secondary">Easily manage, submit, verify, and approve lecturer claims with speed and accuracy.</p>
    
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-3 hover-scale">
                <div class="card-body">
                    <i class="bi bi-pencil-square fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Submit Claims</h5>
                    <p class="card-text text-secondary">Lecturers can easily create and submit claims for approval.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-3 hover-scale">
                <div class="card-body">
                    <i class="bi bi-check2-circle fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Verify & Approve</h5>
                    <p class="card-text text-secondary">Coordinators and managers can review, approve, or reject claims efficiently.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-3 hover-scale">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line fs-1 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">Track Progress</h5>
                    <p class="card-text text-secondary">Monitor claim status in real-time with clear dashboards and notifications.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional Call to Action -->
<div class="container text-center py-5">
    <h5 class="fw-bold mb-3 text-dark">Get Started Today</h5>
    <p class="text-secondary mb-3">Log in to submit your claims or manage approvals seamlessly.</p>
    <a asp-controller="Account" asp-action="Login" class="btn btn-dark btn-lg fw-bold">
        Login Now
    </a>
</div>

<style>
    /* Hover effect for cards */
    .hover-scale:hover {
        transform: scale(1.03);
        transition: transform 0.3s ease-in-out;
    }
</style>
